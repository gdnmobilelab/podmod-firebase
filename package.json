{
  "name": "pushkin-firebase",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run migrate && node ./lib",
    "migrate": "node-pg-migrate up",
    "build": "tsc",
    "docker-compose-prefix":
      "docker-compose -f ./dev.docker-compose.yml run --service-ports --rm -e NODE_ENV=$NODE_ENV pushkin npx",
    "test": "NODE_ENV=test npm run docker-compose-prefix -- mocha --require ts-node/register \"test/**/*.ts\"",
    "test-watch":
      "NODE_ENV=test npm run docker-compose-prefix -- mocha --require ts-node/register \"test/**/*.ts\" --watch --watch-extensions ts",
    "build-interface-validation": "mkdir -p src/validators && ts-node ./build-validators.ts",
    "dev": "NODE_ENV=dev npm run docker-compose-prefix -- nodemon src/index.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bunyan": "^1.8.12",
    "google-auth-library": "^1.3.2",
    "jsonschema": "^1.2.3",
    "node-fetch": "^2.1.2",
    "node-pg-migrate": "^3.0.0",
    "pg": "^7.4.1",
    "restify": "^6.0.0",
    "restify-cors-middleware": "^1.1.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.2",
    "@types/dotenv": "^4.0.2",
    "@types/mocha": "^2.2.48",
    "@types/nock": "^9.1.2",
    "@types/node": "^9.4.6",
    "@types/node-fetch": "^1.6.7",
    "@types/pg": "^7.4.4",
    "@types/pg-promise": "^5.4.3",
    "@types/restify": "^5.0.7",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/restify-errors": "^4.3.2",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "dotenv": "^2.0.0",
    "mocha": "^5.0.4",
    "nock": "^9.2.3",
    "nodemon": "^1.17.3",
    "sinon": "^4.5.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "typescript-json-schema": "^0.22.0"
  }
}
